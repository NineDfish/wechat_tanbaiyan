/**index.wxss**/
page{
  background:#F38181;
  font-family:microsoft yahei;
  text-align:center;
}
.img{
  vertical-align:top;
  width:22px;
  height:22px;
}
.user_tou{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  margin-left:auto;
  margin-right:auto;
  margin-top:50rpx;
  margin-bottom:20rpx;
  display:flex;
  overflow:hidden;
}
text{
  display:block;
  text-align:center;
  font-size:12px;
}
.title{
  color:#fff;
  margin-top:10rpx;
  font-size:20px;
  font-weight:bold;
  letter-spacing:10rpx;
}
.describe{
  margin-top:100rpx;
  color:#fff;
  padding-left:30rpx;
  padding-right:30rpx;
  margin-bottom:50px;
}
button{
  display:block;
  margin-left:auto;
  margin-right:auto;
  margin-top:38rpx;
  background-color:rgb(252, 220, 104);
  width:60%;
  color:#fff;
  font-size:14px;
}
#top_tips{
  font-size:12px;
  color:#FFF;
  vertical-align:top;
  text-align:right;
  position:absolute;
  opacity: 0;
  -webkit-transition: all .5s ease-in;
  -moz-transition: all .5s ease-in;
  transition: all .5s ease-in;
  top:0px;
  right:10px;
  width:200rpx;
}
#top_tips.move{
  opacity: 1;
}